source "https://rubygems.org"
ruby RUBY_VERSION

# Hello! This is where you manage which Jekyll version is used to run.
# When you want to use a different version, change it below, save the
# file and run `bundle install`. Run Jekyll with `bundle exec`, like so:
#
#     bundle exec jekyll serve
#

# If you have any plugins, put them here!
gem 'wdm', '>= 0.1.0' if Gem.win_platform?
group :jekyll_plugins do
    gem 'jekyll-feed' #https://github.com/jekyll/jekyll-feed
    gem 'jekyll-sitemap' #https://github.com/jekyll/jekyll-sitemap
    gem 'jekyll-paginate'
    gem 'jekyll-seo-tag' #https://github.com/jekyll/jekyll-seo-tag
    gem 'jekyll-tagging-related_posts' #https://github.com/toshimaru/jekyll-tagging-related_posts
    gem 'jekyll-responsive-image' #https://github.com/wildlyinaccurate/jekyll-responsive-image
    ##^^ requires imagemagick6 to be installed `sudo apt install imagemagick`
    ## imagemagick7 incompatible: https://github.com/wildlyinaccurate/jekyll-responsive-image#error-cant-install-rmagick
    gem 'jekyll-youtube' #https://github.com/dommmel/jekyll-youtube
    gem 'jekyll-namespaces' #https://github.com/manunamz/jekyll-namespaces
    gem 'jekyll-wikilinks' #https://github.com/manunamz/jekyll-wikilinks
    gem 'jekyll-graph' #https://github.com/manunamz/jekyll-graph
    gem 'jemoji' #https://github.com/jekyll/jemoji
    gem 'jekyll-timeago' #https://github.com/markets/jekyll-timeago
    gem 'liquid_reading_time' #https://github.com/bdesham/reading_time
end
